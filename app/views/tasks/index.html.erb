<%= render partial: "project_task_options", locals:{overdue: @overdue, active: @active, complete: @complete} %>

<div class="default-block">
  <h2 class="t">Your Tasks</h2>
  <div class="line-dark"></div>
  <% if @tasks.empty? %>
    <h4 class="center">It looks like you don't have any tasks. Why not create new one?</h4>
  <% else %>
    <div class="row by">
      <% @tasks.each_with_index do |task, index| %>
        <%= render partial: "task", locals: {task: task, index: index } %>
      <%end %>
    </div>
  <% end %>
</div>




