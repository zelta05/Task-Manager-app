<div class="header">
  <div class="container">
    <h1>Home</h1>
  </div>
</div>

<div class="container">
  <%= render "layouts/flash_block" %>

  <div class="default-block">
    <h2>Your Stats</h2>
    <div class="row">
      <div class="col-sm-4 col-md-3">
        <h3> <%= link_to "#{@projects} Projects", projects_path %></h3>
        <%= link_to "Create new Project ( #{@active_projects} )", new_project_path, class: "btn btn-success btn-margin" %> 
        <%= link_to "Complete Projects ( #{@complete_projects} )", complete_projects_path, class: "btn btn-success btn-margin" %>
      </div>
      <div class="col-sm-4 col-md-3">
        <h3> <%= link_to " Created tasks", all_active_tasks_path %></h3>
        <%= link_to "Active Tasks ( #{@active_tasks} )", all_active_tasks_path, class: "btn btn-success btn-margin" %> 
        <%= link_to "Complete Tasks ( #{@complete_tasks} )", all_complete_tasks_path, class: "btn btn-success btn-margin" %>
      </div>
      
    </div> <!-- row end -->
  </div> <!-- block end -->

</div> <!-- container end -->